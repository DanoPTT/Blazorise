@inherits Blazorise.Radio
<label class="@WrapperClassNames">
    <span class="@CheckboxClassNames">
        <input @ref="@ElementRef" id="@ElementId" type="radio" class="@ClassNames" style="@StyleNames" disabled="@Disabled" readonly="@ReadOnly" checked="@CurrentValue" value="@Value" @onchange="@OnChangeHandler" name="@Group" @attributes="@Attributes" />
        <span class="@InnerClassNames"></span>
    </span>
    <span>
        @ChildContent
        @Feedback
    </span>
</label>
@code{
    string WrapperClassNames
        => $"ant-radio-wrapper {( Cursor == Cursor.Default || Cursor == Cursor.Pointer ? "ant-radio-wrapper-checked" : "" )}";

    string CheckboxClassNames
        => $"ant-radio {( Checked.ToString() == bool.TrueString ? "ant-radio-checked" : "" )}";

    string InnerClassNames
        => $"ant-radio-inner";
}
